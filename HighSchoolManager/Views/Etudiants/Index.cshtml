@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Etudiant_nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etudiant_prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etudiant_contact_parent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref_Groupe.Groupe_id)
            </td>
