@model IEnumerable<HighSchoolManager.Data.Etudiant>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant_nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant_prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant_contact_parent)
